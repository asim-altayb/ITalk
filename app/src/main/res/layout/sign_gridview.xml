<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sign_images_gridview"
    android:gravity="center"
    >

    <com.hackathon.light.italk.AutofitRecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:columnWidth="200dp"
        android:clipToPadding="false"
        android:id="@+id/recycler_card"
        android:layout_above="@+id/linearLayout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:paddingBottom="5dp"
        android:background="#fafafa"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="center"
            android:id="@+id/delete_spoken_word"
            android:background="@mipmap/backspace"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/spoken_word_text"
            android:textAlignment="center"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="4"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="3dp"
            android:textSize="15sp"
            android:textColor="@android:color/black"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="center"
            android:id="@+id/say_spoken_word"
            android:background="@drawable/speak_spoken_word_icon"
            android:layout_gravity="center"/>
    </LinearLayout>

</RelativeLayout>
